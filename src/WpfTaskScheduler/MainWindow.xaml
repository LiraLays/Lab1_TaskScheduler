<Window x:Class="WpfTaskScheduler.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:WpfTaskScheduler"
		mc:Ignorable="d"
		ResizeMode="NoResize"
		Title="Планировщик"
		SizeToContent="WidthAndHeight">
	<Grid Background="White"
		  Width="518"
		  Height="504">

		<!-- Список задач -->
		<ListBox x:Name="TasksListBox"
				 HorizontalAlignment="Left"
				 Height="368"
				 Margin="10,56,0,0"
				 VerticalAlignment="Top"
				 Width="287"
				 Background="#FFD9D9D9"
				 ItemsSource="{Binding Tasks}" />

		<Label x:Name="label"
			   Content="Заданные Напоминания:"
			   HorizontalAlignment="Left"
			   Height="41"
			   Margin="10,10,0,0"
			   VerticalAlignment="Top"
			   Width="287"
			   FontSize="16"
			   FontWeight="Bold" />

		<!-- Индикаторы предусловий и постусловий -->
		<Ellipse x:Name="PreConditionIndicator"
				 HorizontalAlignment="Left"
				 Height="32"
				 Margin="10,429,0,0"
				 Stroke="Black"
				 VerticalAlignment="Top"
				 Width="32"
				 Fill="Red" />

		<Ellipse x:Name="PostConditionIndicator"
				 HorizontalAlignment="Left"
				 Height="32"
				 Margin="10,466,0,0"
				 Stroke="Black"
				 VerticalAlignment="Top"
				 Width="32"
				 Fill="Red" />

		<Label x:Name="PreConditionLabel"
			   Content="{Binding PreConditionStatus}"
			   HorizontalAlignment="Left"
			   Height="32"
			   Margin="47,429,0,0"
			   VerticalAlignment="Top"
			   Width="250"
			   FontSize="16"
			   FontWeight="Bold" />

		<Label x:Name="PostConditionLabel"
			   Content="{Binding PostConditionStatus}"
			   HorizontalAlignment="Left"
			   Height="32"
			   Margin="47,466,0,0"
			   VerticalAlignment="Top"
			   Width="250"
			   FontSize="16"
			   FontWeight="Bold" />

		<!-- Кнопки операций -->
		<Button x:Name="AddTaskButton"
				Content="Добавить Задачу"
				HorizontalAlignment="Left"
				Height="38"
				Margin="302,56,0,0"
				VerticalAlignment="Top"
				Width="207"
				Click="AddTaskButton_Click"
				FontWeight="Bold"
				FontSize="16" />

		<Button x:Name="MoveTaskButton"
				Content="Перенести Задачу"
				HorizontalAlignment="Left"
				Height="38"
				Margin="302,99,0,0"
				VerticalAlignment="Top"
				Width="207"
				Click="MoveTaskButton_Click"
				FontSize="16"
				FontWeight="Bold" />

		<Button x:Name="ShowContractButton"
				Content="Показать контракт"
				HorizontalAlignment="Left"
				Height="38"
				Margin="302,230,0,0"
				VerticalAlignment="Top"
				Width="207"
				Click="ShowContractButton_Click"
				FontSize="16"
				FontWeight="Bold" />

		<CheckBox x:Name="FilterCheckBox"
				  Content="Отфильтровать"
				  HorizontalAlignment="Left"
				  Margin="302,142,0,0"
				  VerticalAlignment="Top"
				  Checked="FilterCheckBox_Changed"
				  Unchecked="FilterCheckBox_Changed"
				  FontSize="16"
				  FontWeight="Bold" />

		<StackPanel x:Name="FilterVbox"
					HorizontalAlignment="Left"
					Height="68"
					Margin="302,162,0,0"
					VerticalAlignment="Top"
					Width="207"
					Background="#FFD9D9D9"
					Visibility="Collapsed">
			<StackPanel Height="33"
						Orientation="Horizontal">
				<CheckBox x:Name="DeadlineFilterCheckBox"
						  Content="По Дедлайну"
						  FontSize="16"
						  FontWeight="Bold"
						  Checked="FilterCriteria_Changed"
						  Unchecked="FilterCriteria_Changed" />

			</StackPanel>
			<StackPanel Height="33"
						Orientation="Horizontal">
				<CheckBox x:Name="PriorityFilterCheckBox"
						  Content="По Приоритету"
						  FontSize="16"
						  FontWeight="Bold"
						  Checked="FilterCriteria_Changed"
						  Unchecked="FilterCriteria_Changed" />
			</StackPanel>
		</StackPanel>

	</Grid>
</Window>