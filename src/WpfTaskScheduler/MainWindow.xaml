<Window x:Class="WpfTaskScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaskScheduler"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Планировщик" SizeToContent="WidthAndHeight">
    <Grid Background="White" Width="518" Height="504">
        <StackPanel HorizontalAlignment="Left" Height="368" Margin="10,56,0,0" VerticalAlignment="Top" Width="287" Background="#FFD9D9D9"/>
        <Label x:Name="label" Content="Заданные Напоминания:" HorizontalAlignment="Left" Height="41" Margin="10,10,0,0" VerticalAlignment="Top" Width="287" FontSize="16" FontWeight="Bold"/>
        <Ellipse HorizontalAlignment="Left" Height="32" Margin="10,429,0,0" Stroke="Black" VerticalAlignment="Top" Width="32" Fill="Red"/>
        <Ellipse HorizontalAlignment="Left" Height="32" Margin="10,466,0,0" Stroke="Black" VerticalAlignment="Top" Width="32" Fill="Red"/>
        <Label x:Name="label_Copy" Content="Предусловие" HorizontalAlignment="Left" Height="32" Margin="47,429,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="label_Copy1" Content="Постусловие" HorizontalAlignment="Left" Height="32" Margin="47,466,0,0" VerticalAlignment="Top" Width="120" FontSize="16" FontWeight="Bold"/>
        <Button x:Name="button" Content="Добавить Задачу" HorizontalAlignment="Left" Height="38" Margin="302,56,0,0" VerticalAlignment="Top" Width="207" Click="button_Click" FontWeight="Bold" FontSize="16"/>
        <Button x:Name="button_Copy" Content="Перенести Задачу" HorizontalAlignment="Left" Height="38" Margin="302,99,0,0" VerticalAlignment="Top" Width="207" Click="button_Click" FontSize="16" FontWeight="Bold"/>
        <CheckBox x:Name="checkBox" Content="Отфильтровать" HorizontalAlignment="Left" Margin="302,142,0,0" VerticalAlignment="Top" Checked="checkBox_Checked" Unchecked="checkBox_Checked" FontSize="16" FontWeight="Bold"/>
        <StackPanel x:Name="FilterVbox" HorizontalAlignment="Left" Height="68" Margin="302,162,0,0" VerticalAlignment="Top" Width="207" Background="#FFD9D9D9" Visibility="Collapsed">
            <StackPanel Height="33" Orientation="Horizontal">
                <CheckBox x:Name="checkBox1" Content="По Дедлайну" FontSize="16" FontWeight="Bold" Checked="checkBox1_Checked"/>
            </StackPanel>
            <StackPanel Height="33" Orientation="Horizontal">
                <CheckBox x:Name="checkBox1_Copy" Content="По Приоритету" FontSize="16" FontWeight="Bold" Checked="checkBox1_Copy_Checked"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
